# api_config.env

# ==============================================================================
# DIRECTORY SETTINGS
# ==============================================================================
# Use absolute paths to avoid confusion, or relative paths from where you run the scripts.
INPUT_DIR="../../PAGE_TXT"
OUTPUT_DIR="../../OUT_API"

# Internal working directory (temporary files)
WORK_DIR="./TEMP"

# Log file location
LOG_FILE="$OUTPUT_DIR/processing.log"

# ==============================================================================
# SUMMARY SCRIPT SETTINGS (Added)
# ==============================================================================
# Defaults for summarize_nt_udp.py
# Inputs usually come from the WORK_DIR (processed CoNLL-U and TSV files)
CONLLU_INPUT_DIR="./TEMP/UDPIPE"
TSV_INPUT_DIR="../../OUT_API/NE"
SUMMARY_OUTPUT_DIR="../../OUT_API/NE_UDP"

# ==============================================================================
# API & MODEL SETTINGS
# ==============================================================================
UDPIPE_URL="https://lindat.mff.cuni.cz/services/udpipe/api/process"
NAMETAG_URL="https://lindat.mff.cuni.cz/services/nametag/api/recognize"

# Models (2024/2025 Standard)
MODEL_UDPIPE="czech-pdt-ud-2.15-241121"
MODEL_NAMETAG="nametag3-czech-cnec2.0-240830"

# ==============================================================================
# RELIABILITY SETTINGS
# ==============================================================================
TIMEOUT=60
MAX_RETRIES=5
BACKOFF_FACTOR=1.5
WORD_CHUNK_LIMIT=900